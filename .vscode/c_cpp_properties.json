{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.19041.0",
            "compilerPath": "C:\\MinGW\\bin\\g++.exe",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "compilerArgs": [
                "-I${workspaceFolder}\\include",
                "-lmingw32", // Adiciona a biblioteca MinGW
                "-lSDL2main",
                "-lSDL2",
				"-lSDL2_image", 
				"-lSDL2_mixer",
				"-lSDL2_ttf",
                "-mwindows" // Necess√°rio para aplicativos Windows SDL2
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ],
    "version": 4
}